{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["src/lib/*"],
      "@database/*": ["src/database/*"]
    },
    "allowJs": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true
  },
  "files": ["./types/express.d.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/database/config/config.js"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}